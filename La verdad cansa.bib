@article{kim_effects_2022,
	title = {Effects of {Indole}-3-{Lactic} {Acid}, a {Metabolite} of {Tryptophan}, on {IL}-4 and {IL}-13-{Induced} {Human} {Skin}-{Equivalent} {Atopic} {Dermatitis} {Models}},
	volume = {23},
	copyright = {https://creativecommons.org/licenses/by/4.0/},
	issn = {1422-0067},
	url = {https://www.mdpi.com/1422-0067/23/21/13520},
